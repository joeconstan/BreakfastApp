<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.arealbreakfast.breakfastapp.MainActivity"
    android:background="@drawable/backgroundrevised"
    >

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Breakfast IM"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/welcomeTV"
        android:layout_marginTop="25sp"
        />

    <EditText
        android:layout_marginTop="50sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/welcomeTV"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:hint="username"
        android:id="@+id/usernameET"
        />

    <EditText
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/usernameET"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:hint="email"
        android:id="@+id/emailET"
        />

    <EditText
        android:layout_centerHorizontal="true"
        android:layout_below="@id/emailET"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:hint="password"
        android:inputType="textPassword"
        android:id="@+id/passwordET"
        />


    <Button
        android:layout_marginTop="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:id="@+id/loginButton"
        android:layout_marginRight="10sp"
        android:layout_below="@+id/passwordET"
        android:layout_alignStart="@+id/passwordET"
        android:onClick="Login"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/registerButton"
        android:layout_alignBaseline="@+id/loginButton"
        android:layout_alignBottom="@+id/loginButton"
        android:layout_toEndOf="@+id/loginButton"
        android:onClick="Register"
        />

</RelativeLayout>
